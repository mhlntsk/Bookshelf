@model IEnumerable<Bookshelf_FL.Models.BookViewModels.BookListViewModel>
@{
    ViewBag.Title = "Результати пошуку";
}

<div id="ContainerOfBody">

    <div id="left_columnOfBody">

        <h2>Результати пошуку</h2>

        <form id="search-form" asp-controller="Book" asp-action="Search" method="post">
            <input type="text" id="book-search" name="SearchQuery" placeholder="Пошук книги...">
            <button type="submit" id="search-button">Пошук</button>
        </form>

    </div>

    <div id="right_columnOfBody" style="padding-top: 4%">

        <div class="ContainerOfBookList">

                @await Html.PartialAsync("_ListOfBooksPartial", Model)

        </div>

    </div>

</div>