@model Bookshelf_FL.Models.AdminViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Зміна паролю";
}
<h2>Зміна паролю для користувача @Model.Email</h2>
<form asp-action="ChangePassword" asp-controller="Admin">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />

    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">Новий пароль</label>
        <input type="text" asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Зберегти" class="btn btn-outline-dark" />
    </div>
</form>