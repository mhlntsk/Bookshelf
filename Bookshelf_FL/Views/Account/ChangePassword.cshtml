@model Bookshelf_FL.Models.AccountViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Зміна паролю";
}
<h2>Зміна паролю</h2>

<form asp-action="ChangePassword" asp-controller="Account">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="OldPassword" class="control-label">Старий пароль</label>
        <input type="text" asp-for="OldPassword" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">Новий пароль</label>
        <input type="text" asp-for="NewPassword" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Зберегти" class="btn btn-default" />
    </div>
</form>